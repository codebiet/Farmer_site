      <div class="ad-form">
        <form action="/create_post" method="post">

          <div class="form-item">
            <label for="user-name">Name</label>
            <input type="text" value="" name="username" placeholder="Enter Your Name" />
          </div>

          <div class="form-item">
            <label for="Crop-type">Select Crop</label>
            <select name="Crop" id="crop">
              <option value="wheat">Wheat</option>
              <option value="Rice">Rice</option>
              <option value="Mustard">Mustard</option>
              <option value="Pulses">Pulses</option>
              <option value="Sugarcane">Pulses</option>
              <option value="Fruits">Fruits</option>
              <option value="Vegetable"> Vegetables</option>
            </select>
          </div>

          <div class="form-item quantity-order">
            <label for="crop-quantity">Crop-quantity</label>
            <input type="number" value="" name="cropquantity" placeholder="Enter Crop Quantity" />
            <select name="cropunit" id="crop-unit">
              <option value="kilo">kilo</option>
              <option value="Quintol">Quintol</option>
            </select>
          </div>


          <div class="form-item">
            <label for="District">District</label>
            <input type="text" value="" name="district" placeholder="Enter Your District Name" />
          </div>

          <div class="form-item">
            <label for="message">Message</label>
            <input type="text" id="user-message" maxlength="100" name="massage" placeholder="Want to add something">
          </div>

          <div class="form-item">
            <label for="Pincode">Pincode</label>
            <input type="text" id='pincode' value="" maxlength="6" name="pincoad" placeholder="Enter Your Area Pincode" />
          </div>
      </div>
      <div class="buttons-section">
        <button type="submit" class="btn">Create Ad</button>
        <button type="reset" class="btn">Reset</button>
      </div>


    </form>
