<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/0f13cdf771.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@400;500&family=Comfortaa&family=Raleway:wght@500&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="./CSS/utils.css">
    <link rel="stylesheet" href="./CSS/style.css">
    <link rel="stylesheet" href="./CSS/contact.css">

    <title>Website Protoype </title>
</head>

<body>
    <section class="wrapper">

        <!-- ----------------------Website name & Logo  and profile section ----------------------------->

        <div class="top-section">
            <div class="site-id">
                <img src="./img/logo.png" alt="logo">
                <span class="p-heading">KishanMitra</span>
            </div>

            <!-- ----Profile Section--------------- -->
            <div class="profile-section">
                <img src="./img/man.png" alt="" class="small-user-img">
                <span class="user-name">User Name</span>
            </div>
        </div>

        <!-- -------------------------Navigation Section---------------------------->

        <nav class="navigation">
            <div class="nav-bar">
                <ul>
                    <li class="nav-item"><a href="./index.html">Home</a></li>
                    <li class="nav-item"><a href="#">About</a></li>
                    <!-- <li class="nav-item"><a href="#">Contact Us</a></li> -->
                    <li class="nav-item"><a href="#">Services</a></li>
                    <li class="nav-item"><a href="#">User Guide</a></li>
                </ul>
            </div>
        </nav>




        <!-- ---------------contact form------------------ -->



        <div class="contact-box">
            <!-- left side  -->
            <div class="form-left">
                <div class="contact-intro">
                    <h1>Contact Us</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Necessitatibus provident animi quos
                        omnis.
                        . Ratione aspernatur error.</p>
                </div>
                <div class="contact-icons" id="mail-us">
                    <img src="./img/mail.svg" alt="">
                    <p>Mail Us</p>
                    <p>Kishanmitra@gmail.com</p>
                </div>

                <div class="contact-icons" id="call us">
                    <img src="./img/phone.svg" alt="">
                    <p>Call Us</p>
                    <p>+91 123456789</p>
                </div>
            </div>

            <!-- --right side of contact box -->

            <div class="form-right">
                <form action="#" class="contact-form">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Your Name" required>

                    <label for="mob">Phone</label>
                    <input type="number" placeholder="Your Number" required>

                    <label for="mail">E-mail</label>
                    <input type="email" placeholder="Your Mail">

                    <label for="message">Message</label>
                    <textarea name="message" id="" cols="30" rows="5" placeholder="Your Query" required></textarea>
                    
                    <div class="user-type">
                        <span>Category :</span>

                        <div class="options">
                            <input type="radio" name="user-type" id="farmer" value="Farmer">
                            <label for="user">Farmer</label>
                            <input type="radio" name="user-type" id="retailer" value="Retailer">
                            <label for="user">Retailer</label>
                            <input type="radio" name="user-type" id="guest" value="Guest">
                            <label for="user">Guest</label>
                        </div>

                    </div>
                    <button type="submit" class="btn">Submit</button>
                </form>


            </div>

        </div>





        <div>
            <hr class="hr-long">
        </div>
        <!-- -----------------------------Footer Section----------------------- --->

        <section class="footer">
            <h3>KishanMitra
            </h3>
            <p>All rights Reserved &copy; Team <span> The Brogrammers </span> </p>
        </section>

    </section>

</body>

</html>